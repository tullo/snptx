{{template "base" .}}

{{define "title"}}Snippet #{{.Snippet.ID}}{{end}}

{{define "main"}}
    <h2>Snippet: {{.Snippet.Title}}</h2>
    {{with .Snippet}}
    <div class='snippet'>
        <div class='metadata'>
            <strong>{{.Title}}</strong>
            <span>#{{.ID}}</span>
        </div>
        <pre><code>{{.Content}}</code></pre>
        <div class='metadata'>
            <!-- custom template fn humanDate -->
            <time>Created: {{humanDate .DateCreated}}</time>
            <time>Expires: {{humanDate .DateExpires}}</time>
        </div>
    </div>
    {{end}}
{{end}}